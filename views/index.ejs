<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header') -%>
  <body>
    <%- include('./partials/nav') -%>
    <div class="display content">
      <% if(blogs.length > 0) { %> 
        <h1>All Blogs</h1>
        <% blogs.forEach(blog=> { %>
      <div class="post">
        <a href="/blogs/<%= blog._id %>">
          <h3><%=blog.title %></h3>
          <p><%=blog.snippet %></p>
        </a>
      </div>
      <% }) %> <% } else { %>
      <h3>There is no post available...</h3>
      <% } %>
    </div>
    <%- include('./partials/footer') -%>
  </body>
</html>
